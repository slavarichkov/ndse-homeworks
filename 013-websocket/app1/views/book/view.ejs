<%- include('../port/layout-start', {title: title}) %>

    <h1>
        <%= title %>
    </h1>

    <div class="row">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">
                        <%= book.title %>
                    </h5>
                    <p class="card-text">
                        <%= book.desc %>
                    </p>
                    <div class="text-right">
                        <a class="btn btn-sm btn-primary" href="/book/update/<%= book.id %>">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <form action="/book/delete/<%= book.id %>" method="POST" class="d-inline">
                            <button class="btn btn-sm btn-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- просмотр комментариев -->
    <div class="card mt-3">
        <div class="card-header">
            Comments
        </div>
        <ul class="list-group list-group-flush">
            <% comments.forEach((comment)=> { %>
                <li class="list-group-item">
                    <p>
                        <%= comment.text %>
                    </p>
                    <small class="text-muted">Posted by <%= comment.author %> on <%= comment.date %></small>
                </li>
                <% }); %>
        </ul>
    </div>
    <!-- добавление комментариев -->
    <form method="POST" action="/book/comment/<%= book.id %>" class="mt-3">
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" name="author" class="form-control" id="author" placeholder="Your name" required>
        </div>
        <div class="form-group">
            <label for="text">Comment</label>
            <textarea name="text" class="form-control" id="text" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <%- include('../port/layout-end') %>